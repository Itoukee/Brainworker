<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".view.characterlist.JinActivity"
            android:background="@drawable/jinbackground"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="80dp"
                android:layout_marginRight="117dp"
                android:adjustViewBounds="true"
                android:src="@drawable/jinname" />

            <TextView
                android:layout_width="316dp"
                android:layout_height="98dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:alpha="0.6"
                android:background="#000000"
                android:text="He fights with Spirits Arms, corners the enemy with rapid, dynamic attacks"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:layout_width="330dp"
                android:layout_height="140dp"
                android:layout_marginTop="320dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="299dp"
                android:alpha="0.6"
                android:background="#000000"
                android:text="Jin is extremely noble and and selfless, and his unerring passion
        feeds his SoulForce. With complete disregard for his own
        well-being, he fights injustice wherever he sees it, for the good of
        humanity. Is that even possible in the ruins of this world...?
    "
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="344dp"
                android:layout_height="178dp"
                android:layout_marginTop="503dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                app:fillColor="#FFFFFFFF"
                app:pageColor="#00000000"
                app:radius="6dp"
                app:slideInterval="5000"
                app:strokeColor="#FF777777"
                app:strokeWidth="1dp">
            </com.synnapps.carouselview.CarouselView>

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_marginLeft="170dp"
                android:layout_marginBottom="-12dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/jinvatar" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>